#ifndef FILOMINO_BOARD_H_
#define FILOMINO_BOARD_H_
#include <optional>
#include <vector>

namespace filomino {

  class Board{
  public:
    Board(int width, int height);
    int operator[](int x, int y) const;
    std::optional<int&> operator[](int x, int y);
    bool Validate() const;
    bool TrySolve();
  private:
    std::vector<std::vector<int>> board_;
    int width_, height;
  };

}
#endif